<head>
	<meta charset="utf-8">
	<title></title>
</head>
<h1>Books</h1>
<table>
<thead>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th colspan="3"></th>
	</tr>
</thead>
<tbody>
	<% @books.each do |book| %>
	<tr>
	<th><%= book.title %></th>
	<th><%= book.body %></th>
	<th><%= link_to "Show", book_path(book) %></th>
	<th><%= link_to "Edit", edit_book_path(book) %></th>
	<th><%= link_to "Destroy", book_path(book),  method: :delete %></th>
    </tr>
    <% end %>
</tbody>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
 
    <h4>Tytle</h4>
    <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create book' %>
 
<% end %>